<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/broken_white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.NewsDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/newsImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/newsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsImageView"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text="Minimal: Things You Should Know"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsTitleTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_account" />

            <TextView
                android:id="@+id/newsCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Life At"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/newsContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/author"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent lacinia nisl ut justo cursus, non malesuada dui aliquet. Sed vitae ligula vitae lectus facilisis varius. Morbi pharetra malesuada lorem a vestibulum. Integer id diam sit amet purus consectetur aliquet. Maecenas tincidunt, lectus ut vehicula aliquet, dui nulla aliquet massa, vel feugiat magna nulla eget massa. Ut consequat, justo nec tempus euismod, velit ex sodales mauris, id aliquet massa lacus id urna. Cras a lectus nec sapien feugiat eleifend. Integer ornare lectus quis arcu faucibus vestibulum. Nulla facilisi. Aenean non eros vehicula, gravida leo id, auctor lorem. Etiam ac metus eu nunc vulputate egestas ac quis odio."
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>
