<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/broken_white"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".fragment.LoadingFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/loadinganimation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />
    <LinearLayout
        android:id="@+id/loadingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lottieAnimationView"
        android:padding="8dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/loadingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Please wait a moment!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/abeezee_regular"
            android:textStyle="bold"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/loadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/abeezee_italic"
            android:text="Analysis process takes up to 10 seconds for optimal results"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>



</RelativeLayout>
